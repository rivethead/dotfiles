{
    "python.linting.enabled": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true
    },
    "[python]": {
        "editor.rulers": [
            120
        ]
    },
    // Editor
    "editor.minimap.renderCharacters": false,
    "editor.detectIndentation": true,
    "editor.roundedSelection": false,
    "editor.formatOnPaste": true,
    // Window - prevent blurry text on secondary monitor
    "window.zoomLevel": 0,
    // Trailing spaces
    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],
    // workbench
    "workbench.editor.enablePreview": false,

    // sonarqube
    "sonarlint.ls.javaHome": "/usr/lib/jvm/java-1.8.0-openjdk-amd64",
    "shellcheck.disableVersionCheck": true,
    "workbench.colorTheme": "GitHub Plus",

    "breadcrumbs.filePath": "off",
    "breadcrumbs.symbolPath": "on",
    "explorer.confirmDragAndDrop": false,
    "window.titleBarStyle": "native",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "text.html.markdown.journal.task.open.bullet",
                "settings": {
                    "foreground": "#CC3300"
                }
            },
            {
                "scope": "text.html.markdown.journal.task.open.marker",
                "settings": {
                    "foreground": "#CC3300"
                }
            },
            {
                "scope": "text.html.markdown.journal.task.open.keyword",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "text.html.markdown.journal.task.open.text",
                "settings": {}
            },
            {
                "scope": "text.html.markdown.journal.task.completed.keyword",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "text.html.markdown.journal.task.completed.marker",
                "settings": {
                    "foreground": "#AAAAAA"
                }
            },
            {
                "scope": "text.html.markdown.journal.task.completed.text",
                "settings": {
                    "foreground": "#AAAAAA"
                }
            },
            {
                "scope": "text.html.markdown.journal.task.completed.bullet",
                "settings": {
                    "foreground": "#CC3300"
                }
            },
            {
                "scope": "text.html.markdown.journal.memo.keyword",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "text.html.markdown.journal.memo.bullet",
                "settings": {
                    "foreground": "#CC3300"
                }
            },
            {
                "scope": "text.html.markdown.journal.scope",
                "settings": {
                    "foreground": "#CC3300"
                }
            },
            {
                "scope": "text.html.markdown.journal.link.keyword",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "text.html.markdown.journal.link.bullet",
                "settings": {
                    "foreground": "#CC3300"
                }
            }
        ]
    },
    "python.jediEnabled": false,
    "editor.suggestSelection": "first",
    "extensions.ignoreRecommendations": true,
    "files.watcherExclude": {
        "**/target/**": true
    },
    "explorer.confirmDelete": false,
    "eslint.run": "onSave",
    "window.restoreWindows": "none",
    "vsicons.dontShowNewVersionMessage": true,
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // remove noise
    "workbench.editor.showTabs": false,
    "editor.minimap.enabled": false,
    "editor.codeLens": false,
    "workbench.activityBar.visible": false,

    "workbench.startupEditor": "none",
    "editor.renderControlCharacters": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "none",
    "editor.lineNumbers": "on",

    "vscode_custom_css.imports": [
        "file:///Users/pieter/.vscode/hide-title-bar.css"
    ],
    "vscode_custom_css.policy": true,
    "window.title": "${activeEditorMedium}${separator}${rootName} ${dirty}",
    "explorer.openEditors.visible": 0,
    "workbench.sideBar.location": "right",
    "editor.renderWhitespace": "all",
    "editor.fontSize": 18,
    "editor.lineHeight": 35,
    "editor.letterSpacing": 0,
    "editor.fontFamily": "Fira Code",
    "editor.suggestFontSize": 18,
    "editor.suggestLineHeight": 35,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.cursorBlinking": false,
    "terminal.integrated.cursorStyle": "line",
    "editor.fontLigatures": true,
    "editor.cursorBlinking": "phase",
    "workbench.statusBar.visible": true,
    "workbench.iconTheme": "material-icon-theme",
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "python.languageServer": "Pylance",
    "workbench.tree.indent": 15,
    "editor.maxTokenizationLineLength": 2000000,
    "hediet.vscode-drawio.local-storage": "",
    "hediet.vscode-drawio.codeLinkActivated": false,
    "editor.columnSelection": false,
    "python.pythonPath": "/home/pieter/projects/stuff/kaggle/k/bin/python3.7",
    "yaml.schemas": {
        "file:///home/pieter/.vscode/extensions/atlassian.atlascode-2.8.5/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "FSharp.useSdkScripts": true,
    "python.formatting.provider": "black",
}